<feelings-indicator value="0"/>
.container
  .row
    .col.s12.pink.lighten-3
  .row
    .col.s4.pink.lighten-3
-# This will be the feeding widget
      %button.waves-effect.waves-light.btn.right.yellow.large{style: "color: black", "ng-click": "$ctrl.add_feeling()"} aicon
      Feed Daegory
      %p
      %p
